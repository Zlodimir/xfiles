<h1>New X-File</h1>
<%= form_for(@xfile) do |f| %>
	<p>
		<%= f.label :name, "Название" %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description, "Дэскрипшн" %><br>
		<%= f.text_field :description %>
	</p>

	<%= f.submit "Create X-File" %>
<% end %>

<% if @xfile.errors.any? %>
	<div id='error_explanation'>
		<h2><% pluralize(@xfile.errors.count, "error") %>
			prohobited this X-File from being saved:</h2>

		<ul>
			<% @xfile.errors.full_messages.each do |msg| %>
				<li> <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>