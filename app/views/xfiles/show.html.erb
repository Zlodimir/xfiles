<% title = "UFO - X-Files" %>
<div class="page-header">
	<h1><%= @xfile.name %></h1>

	<ul class="actions">
		<li><%= link_to "Edit X-File", edit_xfile_path(@xfile), class: "edit" %></li>
		
		<li>
			<%= link_to "Delete X-File", 
				xfile_path(@xfile), 
				method: :delete,
				data: {confirm: "Are you sure want to delete this X-File?"},
				class: "delete"
			%>
		</li>
	</ul>
</div>
<h3><%= @xfile.description %></h3>